extends layout

block content
	if cars
		each car in cars
			.card
				.col-sm-3
					img(src=car.imgpath)
				.col-sm-6
					h2 #{car.name}
					h2 Model no. : #{car.mno}
					h2 Rs. #{car.price}
					br
				.col-sm-3
					form.middle(method="POST" action="/"+user.uname+"/"+car.mno+"/delFromSeeFavs")
								input.btn.btn-warning(type="submit" value="Delete from favourites")
