extends layout

block content
	br
	a.btn.btn-default.col-sm-offset-11(href='/carSearch/'+user.uname) Go Back
	if cars.length
		each car in cars
			hr
			.card
				.col-sm-3
					img(src=car.imgpath)
				.col-sm-3
					h2 #{car.name}
					br
					h4 Model no : #{car.mno}
					h4 Rs.#{car.price}
				.col-sm-3
					br
					h4 Color : #{car.color}
					h4 Mileage : #{car.mileage} kmpl
					h4 #{car.engcap} CC
					h4 #{car.maxsp} kmph Top speed
				.col-sm-3
					form.middle(method="POST" action="/"+user.uname+"/"+car.mno+"/delFromSeeFavs")
								input.btn.btn-warning(type="submit" value="Delete from favourites")
	else
		h1 Empty favourites list !
