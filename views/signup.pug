extends layout

block content
	#signup
		h1=title
		hr
		.col-sm-6
			h3 Sign-up
			form.form-horizontal.needs-validation(method="POST" action="/signup")
				.row
					.form-group.col-sm-6
						input.form-control(name="username" ,type="text",placeholder="Username" required)
					.row
					.form-group.col-sm-6
						input.form-control(name="password" ,type="password",placeholder="Password" required)
					.row
					.form-group.col-sm-6
						input.form-control(name="cpassword" ,type="password",placeholder="Confirm Password" required)


				hr
				br

				input.btn.btn-success(type="submit" value="Sign-up")